      function applyI18n(lang) {
        document.querySelectorAll("[data-i18n]").forEach((el) => {
          const k = el.getAttribute("data-i18n");
          el.textContent = I18N[lang][k] || el.textContent;
        });
        document.querySelectorAll("[data-i18n-ph]").forEach((el) => {
          const k = el.getAttribute("data-i18n-ph");
          el.placeholder = I18N[lang][k] || el.placeholder;
        });
        localStorage.setItem("lang", lang);
        document.getElementById("lang-uk").ariaPressed = lang === "uk";
        document.getElementById("lang-ru").ariaPressed = lang === "ru";
      }

      // ---------- Reveal on scroll ----------
      function attachReveal() {
        const io = new IntersectionObserver(
          (entries) => {
            entries.forEach((e) => {
              if (e.isIntersecting) {
                e.target.classList.add("in");
                io.unobserve(e.target);
              }
            });
          },
          { threshold: 0.15 }
        );
        document.querySelectorAll(".reveal").forEach((el) => io.observe(el));
      }

      // ---------- Simple scrollspy for nav ----------
      function scrollSpy() {
        const sections = [
          "benefits",
          "process",
          "pricing",
          "reviews",
          "faq",
          "contact",
        ];
        const nav = document.getElementById("nav");
        const links = [...nav.querySelectorAll("a")];
        const map = Object.fromEntries(
          links.map((a) => [a.getAttribute("href").slice(1), a])
        );
        const obs = new IntersectionObserver(
          (entries) => {
            entries.forEach((e) => {
              if (e.isIntersecting) {
                links.forEach((a) => a.classList.remove("text-brand-700"));
                const id = e.target.id;
                map[id]?.classList.add("text-brand-700");
              }
            });
          },
          { rootMargin: "-30% 0px -60% 0px", threshold: 0 }
        );
        sections.forEach((id) => {
          const el = document.getElementById(id);
          if (el) obs.observe(el);
        });
      }

      // ---------- Phone input mask ----------
      function phoneMask() {
        const input = document.getElementById("phone");
        if (!input) return;
        input.addEventListener("input", () => {
          let v = input.value.replace(/\D/g, "");
          if (v.startsWith("38")) v = v;
          else if (v.startsWith("0")) v = "38" + v;
          else if (!v.startsWith("38")) v = "38" + v;
          v =
            "+" +
            v.replace(
              /(\d{2})(\d{3})(\d{3})(\d{2})(\d{2}).*/,
              "$1 $2 $3 $4 $5"
            );
          input.value = v.trim();
        });
      }

      // ---------- Telegram form submit ----------
      async function sendToTelegram(e) {
        e.preventDefault();
        const form = e.target;
        const token = form.dataset.tgToken;
        const chat = form.dataset.tgChat;
        const thread = form.dataset.tgThread || undefined;
        const name = document.getElementById("name").value.trim();
        const phone = document.getElementById("phone").value.trim();
        const msg = document.getElementById("msg").value.trim();
        const btn = document.getElementById("sendBtn");
        const status = document.getElementById("formStatus");
        if (!token || !chat) {
          status.textContent = "‚ö†Ô∏è –î–æ–¥–∞–π—Ç–µ TOKEN —ñ CHAT_ID —É –∞—Ç—Ä–∏–±—É—Ç–∏ —Ñ–æ—Ä–º–∏.";
          status.className = "text-red-600";
          return;
        }
        btn.disabled = true;
        btn.textContent = "‚Ä¶";
        status.textContent = "";
        const text = `#–ó–∞–ø–∏—Å\n–Ü–º‚Äô—è: ${name}\n–¢–µ–ª–µ—Ñ–æ–Ω: ${phone}\n–ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è: ${msg}`;
        const url = `https://api.telegram.org/bot${token}/sendMessage`;
        const payload = { chat_id: chat, text, parse_mode: "HTML" };
        if (thread) payload.message_thread_id = thread;
        try {
          const r = await fetch(url, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(payload),
          });
          if (!r.ok) throw new Error("tg");
          status.textContent = "‚úÖ –í—ñ–¥–ø—Ä–∞–≤–ª–µ–Ω–æ —É Telegram";
          status.className = "text-emerald-600";
          form.reset();
        } catch (err) {
          status.textContent = "‚ùå –ü–æ–º–∏–ª–∫–∞ –≤—ñ–¥–ø—Ä–∞–≤–∫–∏. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑.";
          status.className = "text-red-600";
          // Fallback: –≤—ñ–¥–∫—Ä–∏—î–º–æ –¥—ñ–∞–ª–æ–≥ –∑ –±–æ—Ç–æ–º
          window.open("https://t.me/", "_blank");
        } finally {
          btn.disabled = false;
          btn.textContent =
            I18N[localStorage.getItem("lang") || "uk"]["form.send"];
        }
      }

      // ---------- Init ----------
      window.addEventListener("DOMContentLoaded", () => {
        const savedLang = localStorage.getItem("lang") || "uk";
        applyI18n(savedLang);
        document
          .getElementById("lang-uk")
          .addEventListener("click", () => applyI18n("uk"));
        document
          .getElementById("lang-ru")
          .addEventListener("click", () => applyI18n("ru"));
        attachReveal();
        scrollSpy();
        phoneMask();
        const form = document.getElementById("contactForm");
        form.addEventListener("submit", sendToTelegram);
      });
    </script>
  </body>
</html>
